{{#if updateBlog}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=blog.name}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=blog.title}}
      </div>

      <div class="form-group">
        <label for="post">Post</label>
        {{input value=post id="post" placeholder=blog.post}}
      </div>

      <div class="form-group">
        <label for="img">Image Url</label>
        {{input value=img id="img" placeholder=blog.img}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type='date' value=date id="date" placeholder=blog.date}}
      </div>

      <button {{action 'update'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateFormShow'}}>Update</button>
{{/if}}
