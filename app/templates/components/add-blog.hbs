{{#if addNewBlog}}
<h1>New Blog</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="post">Post</label>
        {{textarea value=post id="post"}}
      </div>

      <div class="form-group">
        <label for="img">Image Url</label>
        {{input value=img id="img"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type='date' value=date id="date"}}
      </div>

      <button {{action 'saveBlog'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'blogFormShow'}}>New blog</button>
{{/if}}
